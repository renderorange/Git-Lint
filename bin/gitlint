#!/usr/bin/env perl

use strict;
use warnings;

use FindBin;
use lib "$FindBin::RealBin/../lib";

use Getopt::Long ();
use Pod::Usage   ();
use Git::Lint;

my $VERSION = '0.001';

my %opt;
Getopt::Long::GetOptions(
    \%opt,
    'version' => sub { print "gitlint version $VERSION\n"; exit 0 },
    'help',
) or Pod::Usage::pod2usage( -exitval => 1 );

Pod::Usage::pod2usage( -exitval => 0 ) if ( $opt{help} );

my $lint = Git::Lint->new();
$lint->run();

if ( keys %{ $lint->{issues} } ) {
    print STDERR "the following issues were found:\n\n";

    foreach my $filename ( keys %{ $lint->{issues} } ) {
        print STDERR $filename . "\n";

        foreach my $issue ( @{ $lint->{issues}{$filename} } ) {
            print STDERR $issue . "\n";
        }

        print STDERR "\n";
    }

    exit 1;
}

exit 0;

__END__

=pod

=head1 NAME

gitlint - linter for git

=head1 SYNOPSIS

 gitlint [--version]
         [--help]

=head1 DESCRIPTION

C<gitlint> is a program to lint git commits.

=head1 OPTIONS

=over

=item --version

Print the version.

=item --help

Print the help menu.

=back

